  </footer>  <script>
  const TMDB_API_KEY = 'PUT_YOUR_TMDB_API_KEY_HERE'; // optional

  function filterCards() {
    const q = document.getElementById('search').value.toLowerCase();
    document.querySelectorAll('#grid .card').forEach(card => {
      const title = card.dataset.title.toLowerCase();
      card.style.display = title.includes(q) ? 'block' : 'none';
    });
  }

  function filterCategory(cat) {
    document.querySelectorAll('#grid .card').forEach(card => {
      if (cat === 'all' || card.dataset.category === cat) {
        card.style.display = 'block';
      } else {
        card.style.display = 'none';
      }
    });
  }

  // Auto-load trending from TMDB (requires free API key)
  async function loadTrending() {
    if (TMDB_API_KEY.includes('PUT_')) return;
    const res = await fetch(`https://api.themoviedb.org/3/trending/all/week?api_key=${TMDB_API_KEY}`);
    const data = await res.json();
    const container = document.getElementById('trending');
    container.innerHTML = '';

    data.results.slice(0,6).forEach(item => {
      const title = item.title || item.name;
      const year = (item.release_date || item.first_air_date || '').slice(0,4);
      const rating = item.vote_average?.toFixed(1);
      const card = document.createElement('div');
      card.className = 'card';
      card.innerHTML = `
        <div class=\"content\">
          <span class=\"badge\">Trending ‚Ä¢ ‚≠ê ${rating} ‚Ä¢ ${year}</span>
          <h3>${title}</h3>
          <p>Popular this week.</p>
          <div class=\"where\">
            <a href=\"https://www.themoviedb.org\" target=\"_blank\">TMDB</a>
          </div>
        </div>`;
      container.appendChild(card);
    });
  }

  loadTrending();
</script></body>
